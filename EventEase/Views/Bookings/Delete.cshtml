@model EventEase.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h1>Delete Booking</h1>

<h3>Are you sure you want to delete this booking?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Booking ID</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.BookingId)</dd>

        <dt class="col-sm-2">Event</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Event.EventName)</dd>

        <dt class="col-sm-2">Venue</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Venue.VenueName)</dd>

        <dt class="col-sm-2">Client</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Client.ClientName)</dd>

        <dt class="col-sm-2">Booking Date</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.BookingDate)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BookingId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>