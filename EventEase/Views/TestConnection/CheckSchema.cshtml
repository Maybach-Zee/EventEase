@{
    ViewData["Title"] = "Database Schema Check";
}

<h1>Database Schema Check</h1>

<div class="alert alert-info">
    <h4>@ViewBag.Message</h4>
</div>

<div class="row">
    <div class="col-md-6">
        <h3>Events Table Columns</h3>
        <ul class="list-group">
            @if (ViewBag.EventsColumns != null)
            {
                foreach (var column in ViewBag.EventsColumns)
                {
                    <li class="list-group-item">@column</li>
                }
            }
        </ul>
    </div>
    <div class="col-md-6">
        <h3>Venues Table Columns</h3>
        <ul class="list-group">
            @if (ViewBag.VenuesColumns != null)
            {
                foreach (var column in ViewBag.VenuesColumns)
                {
                    <li class="list-group-item">@column</li>
                }
            }
        </ul>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to Connection Test</a>
</div>